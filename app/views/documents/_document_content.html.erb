
<% if controller.action_name == "new" or @document.draft? %>


	<div class="panel-group" id="accordion" >
		<div class="panel panel-default" >
			<div class="panel-heading">
				<h4 class="panel-title" >
						Paste or type directly into the form
				</h4>
			</div>
			<% paster_class = controller.action_name == "new" ? 'panel-collapse expand' : "panel-collapse expand in" %>
			<div id="paster" class="<%= paster_class %>">
				<div class="panel-body">
					<%= f.label :text %>
					<%= f.text_area :text, :class => 'form-control text-area', :size => "18x18" %>
				</div>
			</div>
		</div>
	</div>
<% end %>



