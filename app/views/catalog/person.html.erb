<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= stylesheet_link_tag "catalog", :media => "all" %>
  <%#= javascript_include_tag "application" %>
</head>
<body>

<div class="container-fluid">

  <div class="panel panel-info catalog-container">
    <div class="panel-heading"><h3 class="panel-title"><%= @entry['name'] %></h3></div>

    <div class="panel-body">

      <div class="row">
        <div class="col-lg-12">
          <form class="form-horizontal">

            <% ['name', 'surname', 'forename', 'role', 'additional_name_info', 'birth', 'death', 'nationality', 'education'].each do |field| %>
                <div class="form-group">
                  <label for="<%= field %>"><%= field.humanize %></label>
                  <input class="form-control" id="<%= field %>" readonly="readonly" type="text" value="<%= @entry[field] %>">
                </div>
            <% end %>

            <div class="form-group">
              <%= image_or_text @entry['image_medium'] %>
            </div>

          </form>
        </div>
      </div>
    </div>
  </div>

</div>


