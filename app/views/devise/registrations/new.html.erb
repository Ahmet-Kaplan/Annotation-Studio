<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "form-horizontal"}) do |f| %>
<%= devise_error_messages! %>
<fieldset>
<legend>Sign up</legend>
	<div class="control-group">
		<%= f.label :firstname, :class => "control-label" %>
		<div class="controls">
		<%= f.text_field :firstname %>
		</div>
		
		<%= f.label :lastname, :class => "control-label" %>
		<div class="controls">
		<%= f.text_field :lastname %>
		</div>
		
		<%= f.label :email, :class => "control-label" %>
		<div class="controls">
		<%= f.email_field :email %>
		</div>
		
		<%= f.label :password, :class => "control-label" %>
		<div class="controls">
		<%= f.password_field :password %>
		</div>
		
		<%= f.label :password_confirmation, :class => "control-label" %>
		<div class="controls">
		<%= f.password_field :password_confirmation %>
		</div>

		<%= f.label :Class, :class => "control-label" %>
		<div class="controls">
		<%= collection_select(:resource, :rep_group_list, get_group_list, :name, :name, :include_blank => true) %><br />
		</div>
		<br />

		<div class="controls">
		<div><%= f.submit "Sign up", :class => "btn btn-primary" %></div>
	</div>
</fieldset>
<% end %>
<%= render "links" %>
