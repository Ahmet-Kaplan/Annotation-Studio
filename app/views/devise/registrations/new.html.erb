<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "form-horizontal"}) do |f| %>
<%= devise_error_messages! %>
<legend>Register</legend>
<fieldset>
	<div class="control-group well">
		<%= f.label :firstname, "First Name", :class => "control-label" %>
		<div class="controls">
		<%= f.text_field :firstname %>
		</div>
		
		<%= f.label :lastname, "Last Name", :class => "control-label" %>
		<div class="controls">
		<%= f.text_field :lastname %>
		</div>
		
		<%= f.label :email, :class => "control-label" %>
		<div class="controls">
		<%= f.email_field :email %>
		</div>
		
		<%= f.label :affiliation, :class => "control-label" %>
		<div class="controls">
		<%= f.text_field :affiliation %>
		</div>
		
		<%= f.label :password, :class => "control-label" %>
		<div class="controls">
		<%= f.password_field :password %>
		</div>
		
		<%= f.label :password_confirmation, :class => "control-label" %>
		<div class="controls">
		<%= f.password_field :password_confirmation %>
		</div>

		<%# f.hidden_field :rep_group_list, :multiple => true, :class => 'hidden', :value => 'public' %>
		<%# f.hidden_field :rep_group_list, :multiple => true, :class => 'hidden', :value => 'ans-iap' %>

		<%= f.label :rep_group_list, "Group", :class => "control-label" %>
		<div class="controls">
		<%= f.text_field :rep_group_list %>
		</div>
		
		<br>
		<div class="controls">
		<%= f.submit "Register", :class => "btn btn-primary" %>
		</div>

		<br>
		<div class="controls">
		<%= render "links" %>
		</div>
	</div>

</fieldset>
<% end %>


