<%= content_for :page_title, "Editing: #{@user.fullname}" %>
<%= content_for :body_id, 'registrations' %>
<%= content_for :body_class, 'edit' %>
<div class="panel panel-default">
  <div class="panel-heading">
    <span class="panel-title">My Profile</span>
  </div>
  <!-- / .panel-heading -->
  <div class="user-form">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :role => "form", class: "confirm-changes"}) do |f| %>
      <%= render partial: 'devise/shared/error_messages' %>
      <div class="row">
        <div class="col-md-6">
          <div class="panel-body child">
            <div class="form-group">
              <%= f.label :firstname, "First Name" %>
              <%= f.text_field :firstname, :value =>  resource.firstname, :class => "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :lastname, "Last Name" %>
              <%= f.text_field :lastname, :value =>  resource.lastname, :class => "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :affiliation, "Affiliation" %>
              <%= f.text_field :affiliation, :value =>  resource.affiliation, :class => "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :email, "Email" %>
              <%= f.text_field :email, :value =>  resource.email, :class => "form-control" %>
            </div>
          </div>
          <!--/panel-body -->
        </div>
        <div class="col-md-6">
          <div class="panel-body child">
            <div class="form-group">
              <%= f.label :password, "New Password" %>
              <%= f.password_field :password, autocomplete: "off",  :class => "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :password_confirmation, "Confirm New Password" %>
              <%= f.password_field :password_confirmation, autocomplete: "off",  :class => "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :current_password, "Current Password" %>
              <p class="help-block"> Only required if you are changing your password. </p>
              <%= f.password_field :current_password, autocomplete: "off",  :class => "form-control" %>
            </div>
          </div>
          <!--/panel-body -->
        </div>
      </div>
      <div class="panel-footer">
        <%= f.submit "Update", :class => "btn btn-default btn-default-primary btn-primary" %>
        <%= link_to "Cancel", :back, :class => "btn btn-default" %>
      </div>
    <% end %>
  </div>
  <!--/user-form -->
</div>
<!--/panel -->
