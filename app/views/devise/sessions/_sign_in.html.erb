<div class="well devise" style="background-color: transparent; border-style: none;">

    <center><p id="title">Log into <span style="color:<%= $DOMAIN_CONFIG['site_color'] %>;"><%= $DOMAIN_CONFIG['site_name'] %></span></p></center>
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => "form"}) do |f| %>
        <%= devise_error_messages! %>

        <div class="form-group" >
            <%= f.label :email %>
            <%= f.email_field :email, :class => "form-control" %>
        </div>

        <div class="form-group">
            <%= f.label :password %>
            <%= f.password_field :password, :class => "form-control" %>
        </div>

        <!-- Registering with a group invitation attached -->
        <% if params[:invite_token] %>
            <%= hidden_field_tag :invite_token, params[:invite_token] %>
        <% end %>


        <div style="float: right; margin-top: 5px;"><%= f.submit "Log in", :class => "btn btn-default btn-default-primary log-in-button" %></div>

    <% end %>
</div><!--/well -->
<%= render "/devise/links" %>
<div class="well devise" style="background-color: transparent; border-style: none; border-width: 0px;">
    <center><p id="title">Or find your domain</p></center>
    <form>
    <div class="form-group">
        <select id="login-chooser" class="form-control">
        <% if !Apartment::tenant_names.blank? %>
          <% for database in Apartment::tenant_names.map{|d| d.downcase}.sort! %>
            <option value="http://<%= database %>.annotationstudio.org">http://<%= database %>.annotationstudio.org</option>
          <% end %>
      <% end %>
        </select>
    </div>
    </form>
</div><!--/well -->
<script type="text/javascript">
$("document").ready(function(){
    $("#login-chooser").change(function(){
        window.location = $(this).val();
    });
});
</script>

<style>
.log-in-button{
    background-color: #DDDEE7;
}

#title{
    font-size: 18pt;
    margin-bottom: -5px;
    

}
</style>
