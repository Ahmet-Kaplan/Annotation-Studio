<div class="row">
  <% @myDocs.each do |doc| %>

    <div class= "column"> 
       <span id="status-icon"> 
        <% case doc.state %>
          <% when 'draft' %>
            <i class="glyphicon glyphicon-pencil" title="<%= doc.state %>"></i>
          <% when 'published' %>
            <i class="glyphicon glyphicon-comment" title="<%= doc.state %>"></i>
          <% when 'archived' %>
            <i class="glyphicon glyphicon-folder-close" title="<%= doc.state %>"></i>
          <% when 'public' %>
            <i class="glyphicon glyphicon-globe" title="<%= doc.state %>"></i>
          <% else %>
            <%= doc.state %>
          <% end %>
       </span> 

       <%= link_to doc.title, document_path(id: doc.id) %> <br>
       <% if doc.author != "" %>
          Author: <%= doc.author %> <br>
      <% end %>
       Created: <%= doc.created_at.strftime("%m/%d/%Y") %> 
       <span class="title"> Groups: <%= doc.groups.pluck(:name) %> </span>
       <br>

       <%= link_to "Edit", controller: "documents", action: "edit", id: doc.id %> <br>

       <%= link_to document_path(doc), method: :delete, data: {confirm: "Are you sure?", toggle: 'tooltip', placement: 'top', original_title: 'Delete'} do %>
              Delete
            <% end %>



    </div> <!-- end column -->

    <!-- change badge color if new doc since last login.  -->
  <% end %> <!-- end doc loop -->
  </div>  <!-- end row -->

  <div class='pagination-controls flex-wrap'>
      <%= will_paginate @myDocs, renderer: BootstrapPagination::Rails %>
  </div>