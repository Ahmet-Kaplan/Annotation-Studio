<div class="row">

<!-- @mygroups are membership objects -->
  <% @mygroups.each do |g| %>
    <div class= "column"> 
       <strong>Name:</strong> <%= Group.find(g.group_id).name %> <br>
       <br>
       <br>
       <%= link_to "Edit", edit_group_path(id: g.group_id) %>
    </div>
  <% end %>
  </div>

  <div class='pagination-controls'>
      <%= will_paginate @mygroups, renderer: BootstrapPagination::Rails %>
    </div>
