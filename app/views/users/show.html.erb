        <!--<li><%#= link_to "Go to document list", documents_path %></li>-->
        <li><%= link_to raw("<span class=\"glyphicon glyphicon-plus\" aria-hidden=\"true\"></span> Create new group"), group_path('new') %></li>
        <li> <%= link_to raw("<span class=\"glyphicon glyphicon-user\" aria-hidden=\"true\"></span> Join a Group"), :controller => "groups", :action=> "index" %></li>
