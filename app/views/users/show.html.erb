<div id="users" class="row">
  <div class="col-md-6">
    <div class="panel panel-default" id="dashboard-documents">
      <div class="panel-heading">
        <span class="panel-title"><%= link_to "Documents", documents_path %></span>
        <ul class="nav nav-tabs nav-tabs-xs pull-right" id="document-tabs" role="tablist">
          <li style ="display:none"><a href="#assigned" data-toggle="tab"><span class="badge"><%= Document.tagged_with(current_user.rep_group_list, :any =>true).where.not(state: 'draft').size %></span> Shared</a></li>

          <li class="active"><a href="#created" data-toggle="tab"><span class="badge"><%= current_user.documents.size %></span> Mine</a></li>


          <!-- bad process documents method: find better solution (maybe cancan) -->
          <% @docList = [] #ensure each document is only shown once. %>
            <% unless current_user.groups.empty? || current_user.groups.nil? %>
              <% current_user.groups.each do |group| %>
              <% if group.documents %>
                <% group.documents.each do |document| %>
                  <% unless (@docList.include? document.id) ||  document.state == "draft" %>
                      <% @docList << document.id %>
                  <% end %> <!-- unless -->
                <% end %> <!-- document loop -->
              <% end %>
              <% end %> <!-- group loop -->
            <% end %> <!-- unless -->
          <li>
            <a href="#shared" data-toggle="tab"><span class="badge"><%= @docList.size %></span> New Group shared </a>
          </li>


        </ul>
      </div><!-- / .panel-heading -->
      <div class="tab-content">
        <div class="tab-pane no-padding fade in" id="assigned" style= "display:none">
          <ul id="documents-assigned" class="list-group">
            <% unless Document.tagged_with(current_user.rep_group_list, :any =>
            true).empty? || Document.tagged_with(current_user.rep_group_list).nil? %>
            <% Document.order("created_at DESC").tagged_with(current_user.rep_group_list, :any =>
            true).where.not(state: 'draft').limit(10).each do |document| %>
            <li class="list-group-item">
              <%= link_to document.title, document_path(document.friendly_id) %>
              <span class="pull-right">
          <% if document.rep_group_list.length > 0 %>
              <span class="label label-info">
                <%= document.rep_group_list[0] %></span>
              <% end %>
                <%= document.created_at.strftime("%m/%d/%Y") %></span>
        <div class="clearfix"></div>
            </li>
            <% end %>
            <li class="list-group-item"><strong><a href="/documents?docs=assigned">See more shared documents&hellip;</a></strong></li>
            <% else %>
            <li class="list-group-item">
              No documents to view. (Your account maybe be pending approval).
            </li>
            <% end %></ul>
        </div><!-- / .tab-pane -->
        <div class="tab-pane no-padding fade active in" id="created">
          <ul id="documents-created" class="list-group">
            <% unless current_user.documents.empty? || current_user.documents.nil? %>
              <% current_user.documents.order("created_at DESC").limit(10).each do |document| %>
                <% if can? :read, document %>
                  <li class="list-group-item">
                    <%= link_to document.title, document_path(document.friendly_id) %>
                    <span class="pull-right">
                      <%= document.created_at.strftime("%m/%d/%Y") %></span>
                  </li>
                <% end %>
              <% end %>
            <li class="list-group-item"><strong><a href="/documents?docs=created">See more of my documents&hellip;</a></strong></li>
            <% else %>
            <li class="list-group-item">
              No documents to view. (Your account maybe be pending approval).
            </li>
            <% end %>
          </ul>
        </div><!-- / .tab-pane -->

        <div class="tab-pane no-padding fade in" id="shared">
          <ul id="documents-shared" class="list-group">

            <% @docList.each do |d| %>
              <% document = Document.find(d) %>
              <li class="list-group-item" id="<%= document.id %>"> 
              <%= link_to document.title, document_path(document.friendly_id) %>
              <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>

            <% if document.updated_at > current_user.last_sign_in_at && 
              document.updated_at < current_user.current_sign_in_at &&
               document.user_id != current_user.id %>
              <script> 
                console.log("show notification");
                $("#<%= document.id %>").append("<span class=\"glyphicon glyphicon-sunglasses\" aria-hidden=\"true\" style=\"color:#facf23\"></span>");
             </script>

            <% end %>
            </li>
            <% end %>
        </ul>

        </div><!-- / .tab-pane -->
        <ul class="nav nav-pills">
        <!--<li><%#= link_to "Go to document list", documents_path %></li>-->
        <li><%= link_to raw("<span class=\"glyphicon glyphicon-plus\" aria-hidden=\"true\"></span> Create new document"), document_path('new') %></li>
      </ul>
MAKE LOGIC CLEANER WITH CANCAN!


      </div>
      

       


    </div><!--/ panel -->

    <div class="panel panel-default" id="dashboard-groups">
